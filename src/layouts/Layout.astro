---
interface Props {
	title: string;
}
const { title } = Astro.props;

import '@fontsource-variable/rubik';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Platzi Food Cuti" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="robots" content="LayoutPage, follow" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: 'Rubik Variable', sans-serif;
		background: #13151a;
	}
	html::-webkit-scrollbar {
		overflow: hidden;
		position: relative;
		width: 100%;
		height: 100%;
	}
</style>
